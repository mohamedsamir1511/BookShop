@model BookShop.Entities.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<div class="container mt-4">
    <h2 class="mb-3">Category Details</h2>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.CatName</h5>
            <p class="card-text">
                <strong>Category Order:</strong> @Model.CatOrder <br />
                <strong>Is Active:</strong> @(Model.MarkedAsDeleted ? "No" : "Yes")
            </p>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="GetAllCategories" class="btn btn-secondary">Back to List</a>
    </div>
</div>
