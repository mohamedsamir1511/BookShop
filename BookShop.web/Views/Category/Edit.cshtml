@model BookShop.Entities.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<div class="container mt-4">
    <h2 class="mb-3">Edit Category</h2>

    <form asp-action="SaveEdit" method="post">
        <div class="mb-3">
            <label asp-for="CatName" class="form-label"></label>
            <input asp-for="CatName" class="form-control" />
            <span asp-validation-for="CatName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CatOrder" class="form-label"></label>
            <input asp-for="CatOrder" class="form-control" />
            <span asp-validation-for="CatOrder" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="MarkedAsDeleted" class="form-check-input" />
            <label asp-for="MarkedAsDeleted" class="form-check-label"></label>
        </div>

        <div class="mt-3">
            <input type="submit" value="Save Changes" class="btn btn-success" />
            <a asp-action="GetAllCategories" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

